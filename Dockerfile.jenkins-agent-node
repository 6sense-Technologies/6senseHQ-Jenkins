FROM jenkins/inbound-agent:latest

USER root

# Install Docker CLI
RUN apt-get update && apt-get install -y \
  docker.io \
  curl

# Install Node.js 24.x
RUN curl -fsSL https://deb.nodesource.com/setup_24.x | bash - \
  && apt install -y nodejs \
  && npm install -g npm@latest

# ðŸ‘‰ Install Infisical CLI
RUN apk add --no-cache bash sudo curl
RUN curl -1sLf 'https://dl.cloudsmith.io/public/infisical/infisical-cli/setup.alpine.sh' | bash
RUN apk update && apk add infisical


# Add jenkins user to docker group with GID 988 (host Docker group)
RUN usermod -aG docker jenkins

USER jenkins